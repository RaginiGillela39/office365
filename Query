SELECT mn.ReportsTo as ReportsTo, 
		COUNT(*) as Members,
		ROUND(AVG(mn.Age))as AverageAge
FROM maintable_7JI1Z mn
JOIN maintable_7JI1Z mn2 on mn.ID=mn2.ID
WHERE mn.ReportsTo=mn2.ReportsTo 
GROUP BY (mn.ReportsTo)
ORDER BY mn.ReportsTo ASC
