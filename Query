select * from [dbo].[EmployeeTB]
select * from [dbo].[Bonus]

--Write a solution to report the name and bonus amount of each employee with a bonus less than 1000.

select emp.name,bn.bonus from EmployeeTB emp
left join Bonus bn on emp.empId = bn.empId
where bn.bonus<1000 or bn.bonus Is Null

select distinct au.author_id from ViewData au
where author_id in (select viewer_id from ViewData)
