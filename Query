using System;
using System.Collections.Generic;

namespace HelloWorldApp
{
    public class HelloWorld
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("Try programiz.pro");
            List<int> numbers = new List<int> { 10, 20, 30, 40, 50, 60, 70, 80, 90 };
            
            Console.WriteLine($"{numbers.Count / 2}");
            for (int i = 0; i < numbers.Count / 2; i++)
            {
                if (i == numbers.Count / 2 - 1)
                {
                    Console.Write($"{numbers[i]},{numbers[numbers.Count - 1 - i]}");
                    break;
                }
                Console.Write($"{numbers[i]},{numbers[numbers.Count - 1 - i]},");
            }
        }
    }
}


Select e.name, e.salary from Employeetable e
join Employeetable m on e.managerId = m.id
where e.salary > m.salary

select email, count(*) from personcontact group by email having count(*)>1

select emp.name from Employeetable emp
left join orderinfo ord on emp.id=ord.empid
where empid is  null

delete from personcontact where id=(
select max(id) from personcontact group by email having count(*)>1)

select top(2) id,temperature from  weather
order by temperature desc 

select player_id,min(event_date) from Activity
group by player_id

SELECT e.name, sum(b.bonus) AS total_bonus
FROM EmployeeTB e
LEFT JOIN Bonus b ON e.empId = b.empId
GROUP BY e.empId,e.name,e.salary
HAVING (e.salary + 1000) >sum(b.bonus) ;

SELECT e.name, b.bonus AS total_bonus
FROM EmployeeTB e
LEFT JOIN Bonus b ON e.empId = b.empId
where b.bonus <1000 or b.bonus is null;

select name from Customer where referee_id <>2 or referee_id is NULL

select customer_number, count(*) from Orders group by customer_number having count(*)>1

select class from Courses group by class having count(student)>=5

